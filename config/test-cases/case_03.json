{
  "caseId": "case_03",
  "title": "JavaScript Transform W2WR",
  "complexity": "simple",
  "hasReactivity": true,

  "concernText": "感情的に仕事のストレスを整理したい。今の気持ちを可視化してから優先度を決めたい",

  "contextFactors": {
    "category": "メンタルヘルス",
    "urgency": "medium",
    "emotionalState": "stressed",
    "timeAvailable": 30
  },

  "expectedBottlenecks": [
    "emotional_block",
    "cannot_prioritize"
  ],

  "expectedFlow": {
    "diverge": {
      "widgets": ["emotion_palette"],
      "purpose": "現在の感情を色と強度で可視化"
    },
    "organize": {
      "widgets": ["card_sorting"],
      "purpose": "感情に関連するストレス要因を分類"
    },
    "converge": {
      "widgets": ["priority_slider_grid"],
      "purpose": "感情の強度に基づいて対処優先度を設定"
    }
  },

  "expectedW2WR": {
    "bindings": [
      {
        "source": "emotion_palette.selectedEmotions",
        "target": "priority_slider_grid.items",
        "relationship": {
          "type": "javascript",
          "javascript": "source.map(e => ({id: e.emotion, label: e.emotion, priority: e.intensity}))"
        },
        "updateMode": "realtime"
      }
    ]
  },

  "evaluationCriteria": [
    "javascript relationshipの適切な生成",
    "データ変換ロジックの妥当性",
    "emotion → priority_itemのデータ型マッピング"
  ]
}

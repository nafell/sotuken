{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/events-batch.json",
  "title": "EventsBatch",
  "type": "object",
  "properties": {
    "events": {
      "type": "array",
      "items": { "$ref": "#/definitions/Event" },
      "minItems": 1
    }
  },
  "required": ["events"],
  "definitions": {
    "Base": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "eventId": { "type": "string" },
        "ts": { "type": "integer", "minimum": 0 },
        "userAnonId": { "type": "string" },
        "configVersion": { "type": "string" },
        "abCondition": { "type": "string" },
        "responseId": { "type": ["string", "null"] },
        "contextHash": { "type": ["string", "null"] },
        "appVersion": { "type": ["string", "null"] },
        "osVersion": { "type": ["string", "null"] }
      },
      "required": ["type", "eventId", "ts", "userAnonId"]
    },
    "UiGenerated": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "ui_generated" },
            "model": { "type": "string" },
            "seed": { "type": "integer" },
            "dslHash": { "type": "string" },
            "configSnapshotHash": { "type": "string" }
          },
          "required": ["model", "seed", "dslHash"]
        }
      ]
    },
    "UiRendered": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": { "type": { "const": "ui_rendered" } }
        }
      ]
    },
    "CardClicked": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "card_clicked" },
            "cardId": { "type": "string" }
          },
          "required": ["cardId"]
        }
      ]
    },
    "ActionExecuted": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "action_executed" },
            "actionId": { "type": "string" },
            "result": { "type": ["string", "null"] }
          },
          "required": ["actionId"]
        }
      ]
    },
    "TaskCompleted": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "task_completed" },
            "taskId": { "type": "string" }
          },
          "required": ["taskId"]
        }
      ]
    },
    "Notification": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "enum": ["notification_shown", "notification_clicked"] },
            "notificationId": { "type": "string" }
          },
          "required": ["notificationId"]
        }
      ]
    },
    "ConcernOrganized": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "concern_organized" },
            "concernId": { "type": "string" },
            "phase": { "type": "string", "enum": ["reality_check", "planning", "breakdown"] },
            "completion": { "type": "boolean" }
          },
          "required": ["concernId", "phase"]
        }
      ]
    },
    "CognitiveLoadReported": {
      "allOf": [
        { "$ref": "#/definitions/Base" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "cognitive_load_reported" },
            "workingMemoryUsageBefore": { "type": ["integer", "null"], "minimum": 0, "maximum": 100 },
            "workingMemoryUsageAfter": { "type": ["integer", "null"], "minimum": 0, "maximum": 100 },
            "clarityLevel": { "type": ["string", "null"], "enum": ["very_clear", "somewhat_clear", "still_foggy"] },
            "brainFogImprovement": { "type": ["boolean", "null"] }
          }
        }
      ]
    },
    "Event": {
      "oneOf": [
        { "$ref": "#/definitions/UiGenerated" },
        { "$ref": "#/definitions/UiRendered" },
        { "$ref": "#/definitions/CardClicked" },
        { "$ref": "#/definitions/ActionExecuted" },
        { "$ref": "#/definitions/ConcernOrganized" },
        { "$ref": "#/definitions/TaskCompleted" },
        { "$ref": "#/definitions/Notification" },
        { "$ref": "#/definitions/CognitiveLoadReported" },
        { "$ref": "#/definitions/Base" }
      ]
    }
  }
}


